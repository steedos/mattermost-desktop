{
  "publish": [{
    "provider": "generic",
    "url": "https://www-steedos-com.oss-cn-beijing.aliyuncs.com/apps/messenger/desktop/${version}"
  }],
  "appId": "com.steedos.messenger.desktop",
  "artifactName": "${name}-${version}-${os}-${arch}.${ext}",
  "directories": {
    "buildResources": "resources",
    "app": "src",
    "output": "release"
  },
  "files": [
    "main_bundle.js",
    "browser/**/*{.html,.css,_bundle.js}",
    "assets/**/*",
    "node_modules/bootstrap/dist/**",
    "node_modules/simple-spellchecker/dict/*.dic"
  ],
  "protocols": [
    {
      "name": "Steedos",
      "schemes": ["steedos"]
    }
  ],
  "deb": {
    "synopsis": "Steedos"
  },
  "linux": {
    "category": "Network;InstantMessaging",
    "target": [
      "deb",
      "tar.gz",
      "appimage"
    ],
    "extraFiles": [
      {
        "filter": [
          "LICENSE.txt",
          "NOTICE.txt"
        ]
      },
      {
        "from": "resources/linux",
        "filter": [
          "create_desktop_file.sh",
          "icon.svg",
          "README.md"
        ]
      }
    ]
  },
  "mac": {
    "category": "public.app-category.productivity",
    "target": [
      "zip",
      "dmg"
    ],
    "darkModeSupport": true,
    "extraResources": [
      {
        "filter": [
          "LICENSE.txt",
          "NOTICE.txt"
        ]
      }
    ],
    "hardenedRuntime": true
  },
  "dmg": {
    "background": "resources/osx/DMG_BG.png",
    "iconSize": 140,
    "iconTextSize": 18
  },
  "squirrelWindows": {
    "iconUrl": "file://resources/icon.ico",
    "artifactName": "${name}-setup-${version}-${arch}.${ext}"
  },
  "win": {
    "target": [
      "nsis"
    ],
    "icon": "icon.ico",
    "extraFiles": [
      {
        "filter": [
          "LICENSE.txt",
          "NOTICE.txt",
          "vbs/*"
        ]
      }
    ],
    "signingHashAlgorithms": ["sha1", "sha256"],
    "certificateSubjectName": "上海华炎软件科技有限公司",
    "timeStampServer": "http://timestamp.digicert.com",
    "signDlls": false
  },
  "appx": {
    "applicationId": "com.steedos.messenger.desktop",
    "displayName": "华信",
    "identityName": "951C92F6.2604342FC116E",
    "publisher": "CN=FB8D4C38-D9BA-43BF-A6C4-D2BF133AC2D1",
    "publisherDisplayName": "华炎软件",
    "languages": "zh-CN",
    "addAutoLaunchExtension": true
  },
  "nsis": {
    "artifactName": "${name}-setup-${version}-win.${ext}"
  }
}
